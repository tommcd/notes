{
  "name": "Helm Analyzer Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:3.12-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "installOhMyZsh": false,
      "upgradePackages": false
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/home/vscode/.cargo/bin:/home/vscode/.local/bin"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true,
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
          }
        },
        "ruff.enable": true,
        "shellformat.flag": "-i 2 -ci -bn",
        "[shellscript]": {
          "editor.defaultFormatter": "foxundermoon.shell-format",
          "editor.formatOnSave": true
        },
        "shellcheck.enable": true,
        "shellcheck.run": "onSave",
        "[markdown]": {
          "editor.formatOnSave": true,
          "editor.defaultFormatter": "unifiedjs.vscode-remark"
        },
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "editor.rulers": [
          88
        ],
        "editor.tabSize": 4,
        "editor.insertSpaces": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "timonwong.shellcheck",
        "foxundermoon.shell-format"
      ]
    }
  },
  "forwardPorts": [],
  "remoteUser": "vscode",
  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig-host,type=bind,readonly,consistency=cached"
  ],
  "postStartCommand": "bash -lc 'git config --global --replace-all include.path /home/vscode/.gitconfig-host || true; sudo git config --system --add safe.directory ${containerWorkspaceFolder} || true'"
}
